<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.cohenhill.ftc.codesnippets</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>FTC Code Snippets</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="cohenphill@outlook.com" url="https://github.com/cohenhill">Cohen</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        <p>A productivity plugin for <b>FIRST Tech Challenge (FTC)</b> robotics teams using IntelliJ IDEA or Android Studio.</p>

        <p><em>Note: This plugin generates templates for the <a href="https://github.com/SeattleSolvers/SolversLib">SolversLib</a> command-based framework.</em></p>

        <h3>Features</h3>
        <ul>
            <li>Generate boilerplate code for <b>Autonomous OpModes</b></li>
            <li>Generate boilerplate code for <b>TeleOp OpModes</b></li>
            <li>Generate <b>Subsystem</b> classes following the read-loop-write pattern</li>
            <li>Generate <b>WSubsystem</b> abstract base class</li>
            <li>Generate <b>Command</b> classes for structured robot control</li>
            <li>Generate <b>Robot</b> container classes</li>
            <li>Support for both <b>Java</b> and <b>Kotlin</b> templates</li>
            <li>Configurable language preference in settings</li>
        </ul>

        <h3>Usage</h3>
        <p>Right-click in the Project view → New → FTC Snippets → Select the desired template type.</p>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <internalFileTemplate name="Subsystem.java"/>
        <internalFileTemplate name="Command.java"/>
        <internalFileTemplate name="TeleOp.java"/>
        <internalFileTemplate name="Auto.java"/>
        <internalFileTemplate name="Robot.java"/>
        <internalFileTemplate name="WSubsystem.java"/>
        <internalFileTemplate name="Subsystemkt.kt"/>
        <internalFileTemplate name="Commandkt.kt"/>
        <internalFileTemplate name="TeleOpkt.kt"/>
        <internalFileTemplate name="Autokt.kt"/>
        <internalFileTemplate name="Robotkt.kt"/>
        <internalFileTemplate name="WSubsystemkt.kt"/>

        <applicationConfigurable
                id="com.cohenhill.ftc.codesnippets.settings"
                parentId="tools"
                displayName="FTC Code Snippets"
                instance="com.cohenhill.ftc.codesnippets.settings.PluginSettingsConfigurable"/>
    </extensions>

    <actions>
        <group id="FTC.Code.Snippets.Group"
               text="FTC Snippets"
               description="FTC Code Generators"
               popup="true">
            <add-to-group group-id="NewGroup" anchor="last"/>

            <action id="NewAutoAction"
                    class="com.cohenhill.ftc.codesnippets.NewAutoAction"
                    text="FTC Autonomous OpMode"
                    description="Creates a new Autonomous OpMode"/>

            <action id="NewTeleOpAction"
                    class="com.cohenhill.ftc.codesnippets.NewTeleOpAction"
                    text="FTC TeleOp OpMode"
                    description="Creates a new TeleOp OpMode"/>

            <action id="NewSubsystemAction"
                    class="com.cohenhill.ftc.codesnippets.NewSubsystemAction"
                    text="FTC Subsystem"
                    description="Creates a new Subsystem"/>

            <action id="NewWSubsystemAction"
                    class="com.cohenhill.ftc.codesnippets.NewWSubsystemAction"
                    text="FTC WSubsystem Base Class"
                    description="Creates the abstract WSubsystem base class"/>

            <action id="NewCommandAction"
                    class="com.cohenhill.ftc.codesnippets.NewCommandAction"
                    text="FTC Command"
                    description="Creates a new Command"/>

            <action id="NewRobotAction"
                    class="com.cohenhill.ftc.codesnippets.NewRobotAction"
                    text="FTC Robot Class"
                    description="Creates a new Robot container"/>
        </group>
    </actions>

</idea-plugin>